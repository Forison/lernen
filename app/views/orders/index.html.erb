<p id="notice"><%= notice %></p>


<div class="container">
  <nav class="navbar d-flex justify-content-between align-items-center bg-warning fixed-top">
    <h1 class="title">My shopping Cart</h1>
    <div>
      <a  href="<%= orders_path%>" class="mini-text-1">My Cart</a>
      <a  href="<%= products_path%>" class="mini-text-1">Checkouts</a>
    </div>
  </nav>
  <div class="clearFix"></div>
  <div class="row">
    <% @orders.each do |record| %>
      <div class="col-4 mb-2">
        <div class="card shadow-lg">
          <img class="img-fluid"  src="<%= asset_path('create21.jpg')%>" alt="default_avatar"/>
          <div class="card-body">
            <h3 class="card-title"><%= record.title%></h3>
            <p class="card-text"><%= record.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
