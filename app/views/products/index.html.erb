<p id="notice"><%= notice %></p>


<div class="container">
  <nav class="navbar d-flex justify-content-between align-items-center bg-warning fixed-top">
    <h1 class="title">Shops</h1>
    <div>
      <a>My Cart</a>
      <a>Checkouts</a>
    </div>
  </nav>
  <div class="clearFix"></div>
  <div class="row">
    <% @products.each do |record| %>
      <div class="col-3 mb-2">
        <div class="card shadow-lg" style="width: 18rem;">
          <img class="img-fluid"  src="<%= asset_path('create21.jpg')%>" alt="default_avatar"/>
          <div class="card-body">
            <h3 class="card-title"><%= record.title%></h3>
            <p class="card-text"><%= record.description %></p>
            <%= button_tag 'Add to Cart', action: "" , class: "btn btn-warning btn-lg text-light"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

